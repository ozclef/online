    <script>
        const themeToggle = document.getElementById('theme-toggle');
        const sunIcon = document.getElementById('sun-icon');
        const moonIcon = document.getElementById('moon-icon');
        const htmlElement = document.documentElement;

        themeToggle.addEventListener('click', () => {
            if (htmlElement.classList.contains('dark')) {
                // Cambiar a modo claro
                htmlElement.classList.remove('dark');
                localStorage.setItem('theme', 'light');
            } else {
                // Cambiar a modo oscuro
                htmlElement.classList.add('dark');
                localStorage.setItem('theme', 'dark');
            }
            // Actualizar visibilidad de los iconos
            sunIcon.classList.toggle('hidden',!htmlElement.classList.contains('dark'));
            moonIcon.classList.toggle('hidden', htmlElement.classList.contains('dark'));
        });
        
        // Inicializar los iconos al cargar la página basado en el estado inicial
        sunIcon.classList.toggle('hidden',!htmlElement.classList.contains('dark'));
        moonIcon.classList.toggle('hidden', htmlElement.classList.contains('dark'));
    </script>
